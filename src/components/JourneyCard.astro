---
interface Props {
  title: string;
  description: string;
  href: string;
  icon?: string;
  readingTime?: string;
}

const {
  title,
  description,
  href,
  icon = 'ðŸŒ¿',
  readingTime,
} = Astro.props;
---

<article class="group">
  <a href={href} class="block card-journey no-underline">
    <!-- Icon -->
    <div class="mb-4">
      <span class="text-3xl group-hover:scale-110 inline-block transition-transform duration-300">
        {icon}
      </span>
    </div>

    <!-- Content -->
    <h3 class="font-display text-xl md:text-2xl text-earth mb-3 group-hover:text-sage transition-colors">
      {title}
    </h3>

    <p class="text-body-sm text-earth-light leading-generous mb-4">
      {description}
    </p>

    <!-- Footer -->
    <div class="flex items-center justify-between pt-4 border-t border-sand/50">
      {readingTime && (
        <span class="text-sm text-earth-light/70">{readingTime} reflection</span>
      )}
      <span class="text-sage text-sm font-medium flex items-center gap-2 group-hover:gap-3 transition-all">
        Explore
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </span>
    </div>
  </a>
</article>
