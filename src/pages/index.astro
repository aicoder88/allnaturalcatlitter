---
import BaseLayout from '../layouts/BaseLayout.astro';
import OrganicHero from '../components/OrganicHero.astro';
import JourneyCard from '../components/JourneyCard.astro';
import WellnessQuote from '../components/WellnessQuote.astro';
import NaturalCTA from '../components/NaturalCTA.astro';
import BreathingSpace from '../components/BreathingSpace.astro';
---

<BaseLayout
  title="Home"
  description="Welcome to your wellness journey with all natural cat litter. Discover holistic, toxin-free litter solutions that nurture both your cat and your home sanctuary."
>
