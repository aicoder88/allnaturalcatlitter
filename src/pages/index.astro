    />
  </section>

  <BreathingSpace size="md" withLine withIcon icon="‚ú¶" />

  <!-- Community Section -->
  <section class="container-narrow text-center pb-20">
    <span class="text-sm uppercase tracking-widest text-sage mb-4 block">Community</span>
    <h2 class="text-heading text-earth mb-4">Join Our Journey</h2>
    <p class="text-body text-earth-light max-w-lg mx-auto mb-8">
      Connect with fellow guardians who embrace natural living for their feline companions.
      Receive gentle reflections and practical wisdom in your inbox.
    </p>
    <a href="/community" class="btn-primary">
      Join the Community
    </a>
  </section>
</BaseLayout>
